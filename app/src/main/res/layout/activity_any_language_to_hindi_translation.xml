<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background1">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Translate Any Language To Hindi"
                android:textSize="30sp"
                android:textColor="@color/blue_800"
                android:fontFamily="@font/borel"
                android:textStyle="bold" />

            <!-- Input Text Field -->
            <EditText
                android:backgroundTint="@color/blue_800"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/textToTranslate2"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Enter Text To Translate"
                android:padding="12dp"
                android:textSize="20sp"
                android:ems="20"
                />

            <!-- Language Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/borel"
                android:textColor="@color/blue_800"
                android:padding="8dp"
                android:text="Select Language:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/fromLanguagesList1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:popupBackground="@drawable/gradient_background1"
                android:spinnerMode="dialog" />

            <!-- Translated Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/borel"
                android:textColor="@color/blue_800"
                android:text="Translated Text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:background="@color/blue_800"
                android:id="@+id/translatedTexttoHindi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="22sp"
                android:textStyle="italic" />

            <!-- Translate Button -->
            <Button
                android:id="@+id/translateButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue_700"
                android:padding="14dp"
                android:text="Translate"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
